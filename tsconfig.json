{
	"compilerOptions": {
		"allowImportingTsExtensions": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": ["ES6", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"resolveJsonModule": true,
		"strict": true,
		"target": "ES2020",
		"types": ["vite/client"]
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "test/**/*.ts"]
}
